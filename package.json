{
  "name": "agentic-automation-canvas",
  "version": "0.10.2",
  "description": "Agentic Automation Canvas - Interactive form for capturing project metadata and generating RO-Crate packages",
  "author": "Sebastian Lobentanzer, slolab",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:all": "./scripts/build-all.sh",
    "preview": "vite preview",
    "preview:all": "npx serve dist -p 4173",
    "docs:dev": "uv run mkdocs serve",
    "docs:build": "uv run python tools/generate-reference.py && uv run mkdocs build",
    "build:dev-rocrate": "tsx scripts/build-dev-rocrate.ts",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "jszip": "^3.10.1",
    "mermaid": "^10.9.5",
    "vue": "^3.4.21",
    "vue-draggable-next": "^2.3.0"
  },
  "devDependencies": {
    "@headlessui/vue": "^1.7.16",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue/eslint-config-typescript": "^13.0.0",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.23.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.21.0",
    "typescript": "^5.4.5",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
